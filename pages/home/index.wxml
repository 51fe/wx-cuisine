<view class="navbar">
  <text 
    wx:for="{{ navs }}" 
    wx:key="id"
    id="{{ item.id }}"
    class="nav-item {{currentId === item.id ? 'activeClass' : ''}}" 
    bindtap="handleSelect"
  >{{ item.name }}</text>
</view>

<empty-data wx:if="{{list.length === 0}}" loading="{{ loading }}"></empty-data>
<scroll-view wx:else scroll-y style="height: {{windowHeight}}px;" bindscrolltolower="loadMore">
  <base-list list="{{list}}"></base-list>
</scroll-view>