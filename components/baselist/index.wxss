.base-list {
  margin-left: 16rpx;
  margin-right: 16rpx;
  display: flex;
  flex-wrap: wrap;
}

.base-list-item {
  width: 229rpx;
  height: 229rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  margin-right: 16rpx;
  box-sizing: border-box;
}

.base-list-item:nth-child(3n) {
  margin-right: 0;
}

.base-list-item_pic {
  width: 100%;
  height: 100%;
}

.base-list-item_title {
  font-size: 24rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; 
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}