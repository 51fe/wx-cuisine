.weui-vtabs {
  width: 100%;
  height: 100%;
  display: flex;
}

.weui-vtabs-bar__wrp {
  width: 200rpx;
  height: 100%;
  margin-top: 56rpx;
  box-sizing: border-box;
  background-color: var(--white-dark);
}

.weui-vtabs-bar__scrollview {
  height: 100%;
}

.weui-vtabs-bar__content {
  width: 100%;
  height: 100%;
}

.weui-vtabs-bar__item {
  display: inline-block;
  width: 100%;
  height: 80rpx;
  border-left: 4px solid transparent;
}

.weui-vtabs-bar__title {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
}

.weui-vtabs-content__wrp {
  overflow: hidden;
  flex: 1;
  height: 100%;
  padding-top: 16rpx;
  box-sizing: border-box;
}

.weui-vtabs-content__scrollview {
  height: 100%;
}

.weui-vtabs-content {
  height: 100%;
}